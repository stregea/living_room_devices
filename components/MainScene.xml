<?xml version="1.0" encoding="utf-8" ?>
<component name="MainScene" extends="Scene"> 
    <children>
         <Overhang
            id="overhang"
            showClock="false"
            logoUri="pkg:/images/overhang_logo.png"
        />
        <!-- LoadingIndicator should be visible only in case of waiting for content -->
        <Label
            id="loadingIndicator"
            text="Loading..."
            width="1280"
            height="720"
            translation="[0, 0]"
            horizAlign="center"
            vertAlign="center"
            visible="false"
            font="font:MediumBoldSystemFont"
        />
    </children>
    <script type="text/brightscript" uri="pkg:/components/MainScene.brs" />
    <script type="text/brightscript" uri="pkg:/components/Logic/ViewStackLogic.brs" />
    <script type="text/brightscript" uri="pkg:/components/Logic/GridScreenLogic.brs" />
    <script type="text/brightscript" uri="pkg:/components/Logic/ContentLoadLogic.brs" />
    <script type="text/brightscript" uri="pkg:/components/Logic/DetailsScreenLogic.brs" />
</component>
