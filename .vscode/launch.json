{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "BrightScript Debug: Launch",
            "type": "brightscript",
            "request": "launch",
            "host": "${promptForHost}",
            "password": "${promptForPassword}",
            "rootDir": "${workspaceFolder}",
            "consoleOutput": "normal",
            "stopDebuggerOnAppExit": true
        }
    ]
}